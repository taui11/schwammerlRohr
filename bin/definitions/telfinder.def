Bootstrap: docker
From: python:3.9-slim

%post
    apt-get update && apt-get install -y python3-biopython
    apt-get update && apt-get install -y git dos2unix
    pip install --no-cache-dir numpy biopython matplotlib
    git clone https://github.com/bio-tombow/TelFinder.git /opt/TelFinder
    chmod +x /opt/TelFinder/TelFinder.py

%environment
    export PATH="/opt/TelFinder:$PATH"

%runscript
    exec python /opt/TelFinder/TelFinder.py "$@"
