Bootstrap: docker
From: ubuntu:22.04

%post
    apt-get update && apt-get install -y wget unzip  ca-certificates
    update-ca-certificates

    # Download Diamond binary and unpack
    wget https://github.com/bbuchfink/diamond/releases/download/v2.1.12/diamond-linux64.tar.gz -O /tmp/diamond.tar.gz
    tar -xzf /tmp/diamond.tar.gz -C /usr/local/bin
    rm /tmp/diamond.tar.gz

    # Make sure diamond binary is executable
    chmod +x /usr/local/bin/diamond

%environment
    export PATH="/usr/local/bin:$PATH"

%runscript
    exec diamond "$@"
